<!DOCTYPE Map>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +no_defs +over" background-color="transparent" minimum-version="0.7.2">
 
<Style name="fixme">
    <Rule>
      <MaxScaleDenominator>500000</MaxScaleDenominator>
      <TextSymbolizer size="11" fill="#b10000" face-name="DejaVu Sans Book" halo-radius="1" wrap-width="80">[fixme]</TextSymbolizer>    
</Rule>
</Style>

  <Layer name="fixme" status="on" srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +no_defs +over">
    <StyleName>fixme</StyleName>
    <Datasource>
      <Parameter name="type">postgis</Parameter>
	<Parameter name="host">osm2pgsql-monde.openstreetmap.fr</Parameter>
      <Parameter name="user">layers</Parameter>
      <Parameter name="password">ootaephi</Parameter>
      <Parameter name="dbname">osm</Parameter>
      	<Parameter name="table">
      	(select tags-&gt;fixme as fixme,tags-&gt;FIXME as FIXME,way from planet_osm_line where ((hstore(tags)-&gt;fixme is not null) or ((hstore(tags)-&gt;FIXME is not NULL)) and hstore(tags)-&gt;fixme not in ('name') ) as roads
	</Parameter>
      <Parameter name="estimate_extent">false</Parameter>
      <Parameter name="extent">-20037508,-19929239,20037508,19929239</Parameter>
    </Datasource>
  </Layer>
  <Layer name="fixme-points" status="on" srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +no_defs +over">
    <StyleName>fixme</StyleName>
    <Datasource>
      <Parameter name="type">postgis</Parameter>
	<Parameter name="host">osm2pgsql-monde.openstreetmap.fr</Parameter>
      <Parameter name="user">layers</Parameter>
      <Parameter name="password">ootaephi</Parameter>
      <Parameter name="dbname">osm</Parameter>
      	<Parameter name="table">
      	(select tags-&gt;fixme as fixme,tags-&gt;FIXME as FIXME,way from planet_osm_point where ((hstore(tags)-&gt;fixme is not null) or ((hstore(tags)-&gt;FIXME is not NULL)) and hstore(tags)-&gt;fixme not in ('name') ) as points
	</Parameter>
      <Parameter name="estimate_extent">false</Parameter>
      <Parameter name="extent">-20037508,-19929239,20037508,19929239</Parameter>
    </Datasource>
  </Layer>
</Map>