<!DOCTYPE Map>
<Map srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +no_defs +over" background-color="transparent" minimum-version="0.7.2">
 
<Style name="note">
    <Rule>
      <MaxScaleDenominator>500000</MaxScaleDenominator>
      <TextSymbolizer size="11" fill="#0000EE" face-name="DejaVu Sans Book" halo-radius="1" wrap-width="80">[note]</TextSymbolizer>    
</Rule>
</Style>

  <Layer name="note" status="on" srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +no_defs +over">
    <StyleName>note</StyleName>
    <Datasource>
      <Parameter name="type">postgis</Parameter>
	<Parameter name="host">osm2pgsql-monde.openstreetmap.fr</Parameter>
      <Parameter name="user">mapnik</Parameter>
      <Parameter name="password">ootaephi</Parameter>
      <Parameter name="dbname">osm2pgsql</Parameter>
      	<Parameter name="table">
      	(select note,way from planet_osm_line where note is not null) as roads
	</Parameter>
      <Parameter name="estimate_extent">false</Parameter>
      <Parameter name="extent">-20037508,-19929239,20037508,19929239</Parameter>
    </Datasource>
  </Layer>
  <Layer name="note-points" status="on" srs="+proj=merc +a=6378137 +b=6378137 +lat_ts=0.0 +lon_0=0.0 +x_0=0.0 +y_0=0 +k=1.0 +units=m +nadgrids=@null +no_defs +over">
    <StyleName>note</StyleName>
    <Datasource>
      <Parameter name="type">postgis</Parameter>
	<Parameter name="host">osm2pgsql-monde.openstreetmap.fr</Parameter>
      <Parameter name="user">mapnik</Parameter>
      <Parameter name="password">ootaephi</Parameter>
      <Parameter name="dbname">osm2pgsql</Parameter>
      	<Parameter name="table">
      	(select note,way from planet_osm_point where note is not null) as points
	</Parameter>
      <Parameter name="estimate_extent">false</Parameter>
      <Parameter name="extent">-20037508,-19929239,20037508,19929239</Parameter>
    </Datasource>
  </Layer>
</Map>